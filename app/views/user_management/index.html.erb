<% title "User Management Dashboard" %>

<% if can? :manage, @users %>
  <p>Hello, you are an Admin</p>
  <h2>Users</h2>
  <% for user in @user %>
    <p><%= user.username %> <%= user.email %> <%= link_to "Edit User", edit_user_path(user) %> <%= link_to "Delete User", user, :confirm => "Are you sure?", :method => :delete %></p>
  <% end %>

  <%= link_to 'New User', new_user_path %>

<% else %>
  <p>Hello, you are not an Admin</p>
<% end %>